                    <LinearGradientBrush EndPoint="0.512000024318695,-0.187000006437302" StartPoint="0.504000008106232,1.54999995231628">
                        <GradientStop Color="#00FFFFFF" Offset="0.665"/>
                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
        </Canvas>

        <!--Logo-->
        <TextBlock x:Name="logoBg" Text="Field Manager" FontSize="30" Foreground="#FF000000" FontFamily="Trebuchet MS" FontWeight="Bold" Canvas.Top="9.5" Canvas.Left="8" d:IsHidden="True"/>
        <TextBlock x:Name="logo" Text="Field Manager" FontSize="30" Foreground="White" FontFamily="Trebuchet MS" FontWeight="Bold" Canvas.Top="8.5" Canvas.Left="8"/>

        <!-- Loading throbber -->
        <Canvas x:Name="loadingThrobber" Height="28.006" HorizontalAlignment="Left" Width="28.002" VerticalAlignment="Top" Canvas.Top="13.5" Canvas.Left="230" Clip="M14.131643,6.7457457 C10.050873,6.7457457 6.7427549,10.053864 6.7427549,14.134634 C6.7427549,18.215405 10.050873,21.523523 14.131643,21.523523 C18.212414,21.523523 21.520533,18.215405 21.520533,14.134634 C21.520533,10.053864 18.212414,6.7457457 14.131643,6.7457457 z M14.002014,0.0050048828 C21.734001,0.0050048828 28.002014,6.2730184 28.002014,14.005005 C28.002014,21.736992 21.734001,28.005005 14.002014,28.005005 C6.2700276,28.005005 0.0020141602,21.736992 0.0020141602,14.005005 C0.0020141602,6.2730184 6.2700276,0.0050048828 14.002014,0.0050048828 z" RenderTransformOrigin="0.5,0.5" Loaded="loadingThrobber_Loaded">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Rectangle Height="28" Width="13.666" Canvas.Left="14.336" Canvas.Top="0.006" d:LayoutOverrides="Width">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FFFFFFF" Offset="0.263"/>
                        <GradientStop Color="#FFFFFFFF" Offset="0.79"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Height="28" Width="14.339" Canvas.Left="0.001">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FFFFFFF" Offset="0.263"/>
                        <GradientStop Color="#02FFFFFF" Offset="0.79"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

        </Canvas>

        <!--Welcome Text-->
        <StackPanel Width="600" Canvas.Top="8" Canvas.Left="370">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource welcomeStyle}" Text="Welcome: "/>
                <TextBlock Style="{StaticResource welcomeStyle}" x:Name="_userNameLabel" Text=""/>
            </StackPanel>
        </StackPanel>


        <!--Select League Drop down-->
        <Border Canvas.Left="650" Canvas.Top="32" BorderBrush="#FF5B788E" BorderThickness="1" CornerRadius="3">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#F5FFFFFF" Offset="0.3"/>
                    <GradientStop Color="#E2FFFFFF" Offset=".8"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="_selectedLeagueLabel" Height="20" Width="300" FontFamily="Trebuchet MS" Margin="3,0,0,0"/>
                <Button x:Name="_leaguesDropButton" Height="18" Width="18"  Click="_leaguesDropButton_Click" Margin="0,0,2,0" Content="▼"/>
            </StackPanel>
        </Border>
        <ListBox x:Name="_leaguesListBox" Canvas.Left="652" Canvas.Top="51.976" Width="323" MaxHeight="115" Canvas.ZIndex="1" Visibility="Collapsed" SelectionChanged="_leaguesListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Tag="{Binding LeagueID}">
                        <TextBlock Padding="5,0,5,0" Style="{StaticResource mediumText}" Text="{Binding TitleAndDescription}" Tag="{Binding Title}" MaxWidth="299"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!--Panels-->
        <Canvas x:Name="Panels" Canvas.Top="60">
            <!-- Fields list frame -->
            <Canvas Canvas.Left="5" x:Name="panelMyFields" Background="#FF000000" Loaded="panelMyFields_Loaded">
                <Rectangle Style="{StaticResource leftPanelStyle}" Fill="{StaticResource panelsFill}" Height="300" Stroke="#FF5B788E"/>
                <Rectangle Height="300" Width="350" RadiusX="5" RadiusY="5" x:Name="animateRect">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.0140000004321337,0.986999988555908" StartPoint="0.966000020503998,0.0299999993294477">
                            <GradientStop Color="#00FFFFFF" Offset="0.589"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0.786"/>
                            <GradientStop Offset="1" Color="#00FFFFFF"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <StackPanel Orientation="Horizontal" Width="350">
                    <TextBlock Style="{StaticResource labelPanelStyle}" Text="League" x:Name="_leagueNameLabel"/>
                    <TextBlock Style="{StaticResource labelPanelStyle}" Text="Fields" Margin="5,5,0,0"/>
                </StackPanel>

                <TextBlock x:Name="_emptyFieldsLabel" Style="{StaticResource boldText}" Text="There are no fields to display." Canvas.Left="85" Canvas.Top="145" Visibility="Collapsed"/>
                <ScrollViewer Height="270" Width="340" Canvas.Left="5" Canvas.Top="25" VerticalScrollBarVisibility="Auto" Background="#4CFFFFFF">
                    <ItemsControl x:Name="_fieldsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Tag="{Binding FieldID}" MouseLeftButtonDown="_fieldListItem_MouseLeftButtonDown" Cursor="Hand">
                                    <Border Width="320" Height="50" Margin="0,0,0,3" Canvas.Top="85" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" MouseEnter="_field_MouseEnter" MouseLeave="_field_MouseLeave">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#AAFFFFFF" Offset="0.3"/>
                                                <GradientStop Color="#66FFFFFF" Offset=".8"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Canvas>
                                            <StackPanel Orientation="Vertical" Width="200" Margin="0,2,0,0" Canvas.Left="10">
                                                <TextBlock Style="{StaticResource boldText}" Text="{Binding Title}"/>
                                                <TextBlock Style="{StaticResource mediumText}" Text="{Binding Address}" TextWrapping="Wrap" MaxHeight="30"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Width="115" Canvas.Left="215" Canvas.Top="3">
                                                <TextBlock Style="{StaticResource boldText}" Text="{Binding IsOpen, Converter={StaticResource IsOpenConverter}, Mode=OneWay}" Width="60" TextAlignment="Right" Margin="0,0,3,0"/>
                                                <Image Source="{Binding CurrentWeather.WeatherSummary, Converter={StaticResource WeatherTypeConverter}, Mode=OneWay}" Height="40" Width="40" />
                                            </StackPanel>
                                        </Canvas>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Canvas>

            <!-- Weather Frame -->
            <Canvas Canvas.Left="5" Canvas.Top="310" x:Name="_weatherPanel">
                <Rectangle Style="{StaticResource leftPanelStyle}" Fill="{StaticResource panelsFill}" Height="200" Stroke="#FF5B788E"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource labelPanelStyle}" Text="Weather for" />
                    <TextBlock Style="{StaticResource labelPanelStyle}" x:Name="_weatherNameLabel" Text="" Margin="5,5,0,0"/>
                </StackPanel>
                <ScrollViewer Height="170" Width="340" Canvas.Left="5" Canvas.Top="25" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden" Background="#4CFFFFFF">
                    <ItemsControl x:Name="_weatherList" >
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="75" Height="150" Margin="0,0,2,0" Canvas.Top="85" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#AAFFFFFF" Offset="0.3"/>
                                            <GradientStop Color="#66FFFFFF" Offset=".8"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Canvas>
                                        <StackPanel Orientation="Vertical" Width="75" Margin="0,5,0,0">
                                            <TextBlock FontSize="10" x:Name="_weatherDayLabel" Text="{Binding Day}" FontWeight="Bold" Width="75" TextAlignment="Center" />
                                            <Image Height="45" Width="45" Source="{Binding WeatherSummary, Converter={StaticResource WeatherTypeConverter}, Mode=OneWay}"/>
                                            <TextBlock FontSize="14" x:Name="_weatherHighLabel" Text="{Binding MaxTemperature}" FontWeight="Bold" Foreground="#FF771111" Width="75" TextAlignment="Center" />
                                            <TextBlock FontSize="14" x:Name="_weatherLowLabel" Text="{Binding MinTemperature}" FontWeight="Bold" Foreground="#FF111177" Width="75" TextAlignment="Center" />
                                            <TextBlock FontSize="10" x:Name="_weatherSummaryLabel" Text="{Binding WeatherSummary}" Width="50" TextAlignment="Center" TextWrapping="Wrap" LineHeight="10" LineStackingStrategy="BlockLineHeight" />
                                        </StackPanel>
                                    </Canvas>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Canvas>

            <!-- Main Field Info Panel -->
            <Canvas x:Name="_mainFieldPanel" Canvas.Left="365">
                <Rectangle Style="{StaticResource rightPanelStyle}" Fill="{StaticResource panelsFill}" Height="510" Stroke="#FF5B788E"/>

                <StackPanel Orientation="Horizontal" Width="430">
                    <Image Width="25" Height="25" Source="images/field.png" Margin="10,5,0,0"/>
                    <TextBlock Style="{StaticResource labelPanelStyle}" x:Name="_fieldNameLabel" Text="{Binding Title}" FontSize="18"/>
                </StackPanel>
                <StackPanel Width="420" Canvas.Top="40" Canvas.Left="8">
                    <TextBlock Style="{StaticResource mediumText}" x:Name="address" Text="{Binding Address}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource boldText}" Text="Phone: "/>
                        <TextBlock Style="{StaticResource mediumText}" x:Name="phone" Text="{Binding PhoneNumber}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource boldText}" Text="Number of Fields: "/>
                        <TextBlock Style="{StaticResource mediumText}" x:Name="numberOfFields" Text="{Binding NumberOfFields}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource boldText}" Text="Parking Lot: "/>
                        <TextBlock Style="{StaticResource mediumText}" x:Name="parkingLot" Text="{Binding ParkingLot}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Width="160" Canvas.Left="435" Canvas.Top="3">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Image x:Name="statusImage" Source="{Binding CurrentWeather.WeatherSummary, Converter={StaticResource WeatherTypeConverter}, Mode=OneWay}" Height="40" Width="40" Margin="0,0,5,0" />
                        <TextBlock x:Name="statusText" Style="{StaticResource boldText}" Text="{Binding IsOpen, Converter={StaticResource IsOpenConverter}, Mode=OneWay}" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Style="{StaticResource boldText}" Text="Date: "/>
                        <TextBlock Style="{StaticResource mediumText}" x:Name="_dayLabel" Text="00/00/00"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Style="{StaticResource boldText}" Text="Time: "/>
                        <TextBlock Style="{StaticResource mediumText}" x:Name="_timeLabel" Text="00:00 PM PST"/>
                    </StackPanel>
                </StackPanel>

                <!--Field Map, Directions, Traffic, People-->
                <Canvas x:Name="panelDisplayPane" Canvas.Top="110" Canvas.Left="5">

                    <!--Rectangle shadow-->
                    <Rectangle Height="300" Width="515" RadiusX="5" RadiusY="5" Stretch="Fill" Fill="#FF000000" Canvas.Top="2" Canvas.Left="2">
                        <Rectangle.OpacityMask>
                            <RadialGradientBrush>
                                <RadialGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <TranslateTransform X="0.045" Y="-0.5"/>
                                    </TransformGroup>
                                </RadialGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF000000" Offset="0"/>
                                <GradientStop Color="#33FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <Rectangle Height="300" Width="515" RadiusX="5" RadiusY="5" Stretch="Fill" Stroke="#0C000000">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFFFFFF" Offset="0.138"/>
                                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Canvas Height="280" Width="495" Background="#FFE4E4E4" Canvas.Left="10" Canvas.Top="10"/>

                </Canvas>

                <!--Tabs-->
                <Grid x:Name="tabs" Canvas.Top="120" Canvas.Left="520">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="65"/>
                        <RowDefinition Height="65"/>
                    </Grid.RowDefinitions>

                    <Canvas Grid.Row="3" MouseLeftButtonUp="_viewContactsClick" >
                        <Button Style="{StaticResource tabStyle}" x:Name="tabFriends" Click="tabFriends_Click" />
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Margin="0,15,0,0" IsHitTestVisible="False">
                            <Image Source="images/friends.png" Width="20" Height="20"/>
                            <TextBlock Style="{StaticResource mediumText}" HorizontalAlignment="Center" Text="People" x:Name="linkFriends"/>
                        </StackPanel>
                    </Canvas>
                    <Canvas Grid.Row="2" MouseLeftButtonUp="_viewTrafficClick">
                        <Button Style="{StaticResource tabStyle}" x:Name="tabTraffic" Click="tabTraffic_Click" />
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Margin="0,15,0,0" IsHitTestVisible="False">
                            <Image Source="images/traffic.png" Width="20" Height="20"/>
                            <TextBlock Style="{StaticResource mediumText}" HorizontalAlignment="Center" Text="Traffic" x:Name="linkTraffic"/>
                        </StackPanel>
                    </Canvas>
                    <Canvas Grid.Row="1" MouseLeftButtonUp="_viewDirectionsClick" >
                        <Button Style="{StaticResource tabStyle}" x:Name="tabDirections" Click="tabDirections_Click" />
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Margin="0,15,0,0" IsHitTestVisible="False">
                            <Image Source="images/directions.png" Width="20" Height="20"/>
                            <TextBlock Style="{StaticResource mediumText}" HorizontalAlignment="Center" Text="Directions" x:Name="linkDirections"/>
                        </StackPanel>
                    </Canvas>
                    <Canvas Grid.Row="0" MouseLeftButtonUp="_viewFieldClick">
                        <Button Style="{StaticResource tabStyle}" x:Name="tabField" Click="tabField_Click" />
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Margin="0,15,0,0" IsHitTestVisible="False">
                            <Image Source="images/field.png" Width="20" Height="20" />
                            <TextBlock Style="{StaticResource mediumText}" HorizontalAlignment="Center" Text="Field" FontWeight="Normal"/>
                        </StackPanel>
                    </Canvas>
                </Grid>

                <StackPanel Canvas.Top="413" Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Style="{StaticResource labelPanelStyle}" Text="Map Legend"/>
                        <ScrollViewer Height="65" Width="135" VerticalScrollBarVisibility="Auto" Background="#55FFFFFF" Margin="5,0,0,0">
                            <ScrollViewer.Clip>
                                <RectangleGeometry RadiusX="8" RadiusY="5" Rect="0,0,135,65"/>
                            </ScrollViewer.Clip>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="images/inCollectionFieldPin.png" Width="15" Height="15" Margin="6,0,0,0"/>
                                    <TextBlock Style="{StaticResource mapLegendText}" Text="In This League" TextWrapping="Wrap" Padding="4"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="images/notInCollectionFieldPin.png" Width="15" Height="15" Margin="6,0,0,0"/>
                                    <TextBlock Style="{StaticResource mapLegendText}" Text="Not In This League" TextWrapping="Wrap" Padding="4"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="images/closedFieldPin.png" Width="15" Height="15" Margin="6,0,0,0"/>
                                    <TextBlock Style="{StaticResource mapLegendText}" Text="Closed" TextWrapping="Wrap" Padding="4"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                    <StackPanel x:Name="panelNotes">
                        <TextBlock Style="{StaticResource labelPanelStyle}" Text="Field Notes"/>
                        <ScrollViewer Height="65" Width="455" VerticalScrollBarVisibility="Auto" Background="#55FFFFFF" Margin="5,0,0,0">
                            <ScrollViewer.Clip>
                                <RectangleGeometry RadiusX="8" RadiusY="5" Rect="0,0,455,65"/>
                            </ScrollViewer.Clip>
                            <TextBlock Style="{StaticResource mediumText}" Text="{Binding Status}" TextWrapping="Wrap" Padding="5"/>
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </Canvas>
        </Canvas>

    </Canvas>
</UserControl>
