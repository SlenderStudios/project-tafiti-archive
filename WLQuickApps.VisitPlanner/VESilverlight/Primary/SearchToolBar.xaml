<VESilverlight_Primary:AbstractToolBar x:Class="VESilverlight.Primary.SearchToolBar" 
	xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:VESilverlight="clr-namespace:VESilverlight;assembly=VESilverlight"	
	xmlns:VESilverlight_Primary="clr-namespace:VESilverlight.Primary;assembly=VESilverlight"	
	Width="220" Height="358.833">
    <Canvas x:Name="LayoutRoot">
	<VESilverlight:Repeater Canvas.Top="59" Width="204" Height="291.833" x:Name="repeater"/>

	    <Rectangle Width="187" Height="21" Fill="#FFFFFFFF" Stroke="#FFEAE7B7" RadiusX="8" RadiusY="15" Canvas.ZIndex="-1" Canvas.Top="2" Canvas.Left="-2" />
        <TextBox x:Name="textBox" Style="{StaticResource TextBoxNoBorder}" Cursor="IBeam" Margin="2" Width="135" Height="18" BorderThickness="0" Canvas.Top="1" Canvas.Left="9" FontSize="12" KeyDown="textBox_KeyDown"></TextBox>

        <Canvas Width="50" Height="21" Canvas.Left="134" Canvas.Top="3" x:Name="FindButton" Cursor="Hand">
		<Rectangle Width="50" Height="21" Fill="#00FFFFFF" />
		<Image Width="50" Height="19"  x:Name="FindUp" Source="/images/Btn_searchFind.png" Stretch="Fill"/>
		<Image Width="50" Height="19"  x:Name="FindDown" Source="/images/Btn_searchFind_On.png" Visibility="Collapsed" Stretch="Fill"/>
	</Canvas>
	
</Canvas>
</VESilverlight_Primary:AbstractToolBar>