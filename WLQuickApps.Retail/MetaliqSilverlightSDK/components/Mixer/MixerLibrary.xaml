<UserControl x:Class="MetaliqSilverlightSDK.Controls.Mixer.MixerLibrary"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Mixer="clr-namespace:MetaliqSilverlightSDK.Controls.Mixer;assembly=MetaliqSilverlightSDK"
    xmlns:Metaliq="clr-namespace:MetaliqSilverlightSDK.Controls;assembly=MetaliqSilverlightSDK"
    Width="500" Height="150">
    <Canvas x:Name="LayoutRoot" Background="White">
        <Rectangle x:Name="LibraryBackground" Fill="#FFF3E2E2" Width="500" Height="150"/>
        <Metaliq:WrapPanel Margin="10"  x:Name="Content" Width="500" Height="300">
            <Mixer:MixerAsset Margin="10" x:Name="Aqua" Color="Aqua" Width="72" Height="40"/>
            <Mixer:MixerAsset Margin="10" x:Name="Bisque" Color="Bisque" Width="72" Height="40" />
            <Mixer:MixerAsset Margin="10" x:Name="Wheat" Color="Wheat" Width="72" Height="30" />
            <Mixer:MixerAsset Margin="10" x:Name="Pink" Color="Pink" Width="72" Height="30" />
            <Mixer:MixerAsset Margin="10" x:Name="BlueViolet" Color="BlueViolet" Width="72" Height="30"/>
            <Mixer:MixerAsset Margin="10" x:Name="Plum" Color="Plum" Width="72" Height="30"/>
        </Metaliq:WrapPanel>
    </Canvas>
</UserControl>
